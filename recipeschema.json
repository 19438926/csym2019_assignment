{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "BBC good  food recipe",
    "properties": {
        "Recipes": {
            "type": "array",
            "item": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "title": {
                        "type": "string"
                    },
                    "preptime": {
                        "type": "integer"
                    },
                    "cooktime": {
                        "type": "integer"
                    },
                    "complexity": {
                        "type": "string"
                    },
                    "introduction": {
                        "type": "string"
                    },
                    "Nutrition": {
                        "type": "object",
                        "properties": {
                            "kcal": {
                                "type": "integer"
                            },
                            "fat": {
                                "type": "integer"
                            },
                            "saturates": {
                                "type": "integer"
                            },
                            "carbs": {
                                "type": "integer"
                            },
                            "sugars": {
                                "type": "integer"
                            },
                            "fibres": {
                                "type": "integer"
                            },
                            "protein": {
                                "type": "integer"
                            },
                            "salt": {
                                "type": "double"
                            }
                        }
                    },
                    "Ingredients": {
                        "type": "array","items":{"type":"string"}
                    },
                    "Method": {
                        "type": "array","items":{"type":"string"}
                    }
                }
            }
        }
    }
}